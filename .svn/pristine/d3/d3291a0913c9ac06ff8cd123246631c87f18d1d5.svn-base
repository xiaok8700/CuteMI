<!doctype html>
<html>
	<head>	
		<title>添加商品分类</title>
		<meta charset="utf-8" />
		<style type="text/css">
		    *{
		    	text-decoration:none;
		    }
		    body{
               background:#f7f8f9;
		    }
		    table tr{
		    	text-align:center;
		    }
		    a:hover{
               color:red;
		    }
		</style>
	</head>
		<body>		
		     <table border="1" width="800" align="center">
				<caption><h1>分类管理</h1></caption>
				<tr>
					<th>ID号</th>
					<th>类别名称</th>				
					<th>父ID</th>
					<th>路径</th>
					<th>操作</th>
				</tr>
				<foreach name="type" item="type">
				<tr>
					<td><{$type.typeid}></td>
					<td><{$type.tname}></td>
					<td><{$type.pid}></td>
					<td><{$type.path}></td>
					<td>
						<a href="__CONTROLLER__/add/typeid/<{$type.typeid}>">添加&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
						<a href="">修改&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
						<a href="__CONTROLLER__/del/typeid/<{$type.typeid}>">删除</a>
					</td>
				</tr>
				</foreach>
			</table>
		</form>
	</body>
</html>