              var oid = $("#oid").val();
              
               $.ajax({
                        type:"post",
                        data:"account="+account+"&oid="+oid,
                        url:"/cuteMi/index.php/Home/Pay/pay",
                        dataType:"text",
                        success:function(data){
                            if(data=="1"){
                                 alert("余额不足!");                                 
                            }else if(data=="2"){
                                alert("付款成功!");
                                window.location.assign("/cuteMi/index.php/Home/space/allbook");
                            }else{
                                alert("银行卡错误!");
                            }
                        },
                     });

          });

      });
