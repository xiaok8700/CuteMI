<!doctype html>
<html>
	<head>
		<meta charset='utf-8'>
		<title>添加收藏</title>
		<style>
			*{
				list-style-type:none;
			}
			h1{
				text-align:center;
				color:red;
			}
		</style>
	</head>
	<body>
		<form action="__CONTROLLER__/insert" method="post" enctype="multipart/form-data">
			<table border="1" width="70%" align="center" bordercolor="blue">
				<h1>添加收藏</h1>
				<tr>
					<td>商品gid:</td>
					<td ><input type="text" name='gid' placeholder="请输入产品ID" value=""></td>
				</tr>
				<tr>
					<td>商品图片:</td>
					<td>
						<input type="file" name='pic'>
						
					</td>
				</tr>
				<tr>
					<td>商品名称:</td>
					<td ><input type="text" name='gname' placeholder="请输入产品名字" value=""></td>
				</tr>
				<tr>
					<td>商品价格:</td>
					<td><input type="text" name='price' placeholder="请输入商品价格" value=""></td>
				</tr>
				<tr>
					<td>商品颜色:</td>
					<td><input type="text" name='color' placeholder="你喜欢什么颜色" value=""></td>
				</tr>
				<tr>
					<td>关键字:</td>
					<td><input type="text" name='keywords' placeholder="请输入关键字" value=""></td>
				</tr>
				<tr>
					<td><input type='submit' value='提交'></td>
					<td><input type="reset" value='重置'></td>
				</tr>

			</table>
		</form>
	</body>


</html>