               gname = $(".J_proDesc").html();
               verson = $(this).attr("title");
               price = $(".J_proPrice").html();
               $(".msg-bd").html(gname+verson+color+price+"元");
           });

          //点击颜色时候触发的事件(嵌套)
           $(".J_stepItem2").click(function(){
                 color = $(this).attr("title");
                $(".msg-bd").html(gname+verson+color+price+"元");
           }); 


        //给加入购物车加样式(移入)
         $(".btn").mouseover(function(){
            $(this).css("background","red");
