    public function doaddress(){
      $res = M('district');
        foreach ($_POST['is_district'] as $v) {
            $row = $res->find($v);
            $str2[] = $row['name'];
        }
      $do=M('address');
      $_POST['uid'] = 1;
      $_POST['is_district'] = implode(' ', $str2);

      $do->create();
      $list=$do->add();
      $list ? $this->ajaxReturn($list) : $this->ajaxReturn(0);




    }

    //用户查询地址的详细信息  district
    public function add() {
        $data['upid'] = $_POST['upid'] + 0;
        $address = M('district');
        $arr = $address->where($data)->select();
        if ($arr) {
            $this->ajaxReturn($arr, 'json');
        }
    }

    //订单信息插入数据库中
    public function addorder(){
      
      
      if($_POST){
        // $_SESSION['post']=$i;
        // dump($_POST['oid']);
        $time=date('y/m/d h:i:s',time());
        $total=$_SESSION['total'];
        $address=M('address');
        $a=$address->where('mi_address.id='.$_POST['oid'])->find();
        $data=array(
          'uid'=>$a['uid'],
          'consignee'=> $a['name'],
          'address' => $a['address'].$a['is_district'],
          'postcode' => $a['code'],
          'phone' => $a['mob_phone'],
          'total' => $total,
          'addtime' =>$time
          );

        $order=M('order');
        $add=$order->data($data)->add();
        $_SESSION['oid']=$add;
        if($add){
          $this->redirect(U('order/pay'));


        }
    }

