<script>
    $(function(){
        $("#txtPwd").blur(function(){
            if($("#txtPwd").val()==''){
                $("#emailCode").html("密码不能为空！");
            }else{
                $("#emailCode").html("");
            }
        });
        $("#pwd").blur(function(){
            if($("#pwd").val()==''){
                $("#new").html("密码不能为空！");
            }else{
                $("#new").html("");
            }
        });
        
         $("#pwdq").blur(function(){
            if($("#pwdq").val()==''){
                $("#pwdq").html("两次密码输入不一致！");
            }else{
                $("#pwdq").html("");
            }
        });
        
    });
</script>

