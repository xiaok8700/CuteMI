    public function update(){
        $user = D("Space");
        $where['id'] = I("post.aid");
        //dump($_POST);die();
        if(!($user->create())){
            $this->error($user->getError());
        }else{
            $res = $user->where($where)->save();
            if($res){
                $this->success("修改成功！",U("address"));
            }else{
                $this->error("修改失败！");
            }
        } 
    }
    //删除
    public function del(){
        $where['id'] = I("get.uid");
        $user = M("address");
        //dump($where);die();
        $res = $user->where($where)->delete();
        if($res){
                $this->success("删除成功！",U("address"));
            }else{
                $this->error("修改失败！");
            }
    }
    
    public function insert(){
        $user = D("Space");
