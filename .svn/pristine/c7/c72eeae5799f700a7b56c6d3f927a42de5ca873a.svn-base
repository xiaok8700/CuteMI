    }
    
    public function recharge(){
        $where['uid'] = $_SESSION['user']['uid'];
        $res = M('user_bank')->where($where)->getField('count');
       // dump($res);die();
        $data['count'] = 10000 + $res;
        M('user_bank')->where($where)->data($data)->save();
        $this->success('充值成功！','yen');
    }
    
