    //取消收藏
    public function cancel(){
       $cid = I("get.cid");
       $collect = M("collect");
       $data["state"] = "1";
       $collect->where("cid = ".$cid)->data($data)->save();

       // 获取gid
       $res = $collect->where("cid = ".$cid)->find();
       $gid = $res["gid"];
       //同时改变session中标识
       $_SESSION["collect"][$gid]["iscollect"]=false;

    }

